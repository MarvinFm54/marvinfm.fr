<!DOCTYPE html>
<html lang="fr">
<head>

    <!-- Elements -->
    <meta charset="UTF-8">
    <title>{% block title %} WebSite {% endblock %} // MarvinFm </title>

    <!-- Styles generaux -->
    <!--<link rel="stylesheet" href="{{ asset('public/styles/couleurs.css') }}">-->
    <link rel="stylesheet" href="{{ asset('styles/couleurs.css') }}">

    {% block styles %}
    {% endblock %}
    
    <!-- Styles externes -->
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>
{% block body %}
<body data-aos="fade-down" class="lapis">
{% endblock %}

    <!-- Barre du haut -->
    <header data-aos="fade-down" data-aos-duration="120">
        {% block header %}
        {% endblock %}
    </header>

    <!-- Main -->
    <main>
        {% block main %}
        {% endblock %}
    </main>

    <!-- Popups -->
    <main>
        {% block popups %}
        {% endblock %}
    </main>

    <!-- Footer -->
    <footer>
        {% block footer %}
        {% endblock %}
    </footer>

    <!-- Scripts -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script> AOS.init(); </script>
    {% block scripts %}
    {% endblock %}

</body>
</html>
