{% extends 'A_Shared/base.html.twig' %}

{# --- Head --- #}
{% block title %} Cours {% endblock %}
{% block styles %}
<link rel="stylesheet" href="{{ asset('styles/styles_header1.css') }}">
<link rel="stylesheet" href="{{ asset('styles/styles_cours.css') }}">
<link rel="stylesheet" href="{{ asset('styles/popups.css') }}">
{% endblock %}

{# --- Body --- #}
{% block body %}
<body class="lapis">

{# --- Popups --- #}
{% include 'A_Shared/theme_popup.html.twig' %}
{% endblock %}


{# --- Header --- #}
{% block header %}

{# --- Titre --- #}
<h1> Ã‰tudes & Cours </h1>

{# --- Center --- #}
<div class="center">
<h2> {{ nbCours }} cours </h2>
</div>

{# --- Boutons --- #}
<div>
<a><i class="fa-solid fa-paint-roller" id="themes" data-popup="popupThemes"></i></a>
<a href="/"><i class="fa-solid fa-house"></i></a>
</div>
{% endblock %}


{# --- Body --- #}
{% block main %}
<section class="container">
    <div class="content">

    {# Boucle sur tous les cours #}
    {% for cours in cours %}
    <div class="cours" data-aos="zoom-in-up" data-aos-duration="280">

    {# Lien qui englobe la carte #}
    <a {% if cours.link %} href="{{ cours.link }}" target="_blank" {% endif %}>

    {# Contenu / Infos #}
    <div class="titre-barre">
    <h2>{{ cours.name }}</h2>
    <div class="barre"></div>
    </div>
    
    <h3>{{ cours.desc }}</h3>
    <div class="fcours">
    <h3>{{ cours.domaine }}</h3>
    <h4>{{ cours.type }} - {{ cours.info }}</h4>
    </div>
    
    </a>
    </div>
    {% endfor %}
    
    </div>
</section>
{% endblock %}


{# --- Scripts --- #}
{% block scripts %}
<script src="{{ asset('scripts/popup_boutons.js') }}"></script>
<script src="{{ asset('scripts/themes.js') }}"></script>
<script src="{{ asset('scripts/script_cours.js') }}"></script>
{% endblock %}