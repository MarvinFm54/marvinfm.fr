<form method="post" action="/?action=connection" id="popupConnect" class="popup" style="display: none;">
                    
    <h2> Se connecter </h2>
    
    <h3> Identifiant </h3>
    <input type="text" name="username" required>
            
    <h3>Mot de passe</h3>
    <input type="password" name="password" id="password" required>

    <input type="hidden" name="_token" value="{{ csrf_token('connection') }}">
    <input type="hidden" name="view" value="{{ app.request.query.get('p') }}">
    <input type="submit" name="connection" value="Se connecter">
</form>